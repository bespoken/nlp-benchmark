<script>
    $(document).ready(() => {
        $('#submit-form').on('click', async () => {
            $('.message').hide()
            const firstName = validate('first-name', 'First Name')
            const lastName = validate('last-name', 'Last Name')
            const company = validate('company-name', 'Company')
            const email = validate('email', 'Email')
            
            if (firstName && lastName && company && email) {
                try {
                    const response = await axios.post('https://utils-api-dev.bespoken.io/utils-server/generateBespokenLead', {
                        firstNameCTA: firstName,
                        lastNameCTA: lastName,
                        emailNameCTA: email,
                        companyCTA: company,
                        messageCTA: 'Please setup a meeting with me, Kirk and Pier!',
                        page: 'Benchmark',
                        providers: 'salesforce'
                    })
                    console.info('posted data: ' + JSON.stringify(response.data, null, 2))
                } catch (e) {
                    if (e.response?.data?.includes('duplicate')) {
                        console.warn('Duplicated record - ignoring')
                    } else {
                        $('.error').text('Submission failed! Please try again later, or just email us directly at <a href="mailto:contact@bespoken.io">contact@bespoken.io</a>')
                        $('.error').show()
                        console.error(e.toString())
                        return
                    }
                    
                }
                $('.success').text('Your information has been submitted - we will be in touch shortly!')
                $('.success').show()
            }
            console.info('printing stuff.')
        })

        
        
    })

    function validate(field, display) {
        const value = $(`input[name="${field}"]`).val()
        if (value.trim() === '') {
            $('.error').text(`${display} must be entered`)
            $('.error').show()
            return undefined
        }
        return value.trim()
    }
</script>
