<canvas id="successByPlatformCanvas" ></canvas>
<script>
  window.addEventListener('load', async () => {
    const response = await axios.get('/llm/successByPlatform')
    const rawData = response.data

    const chartData = {
      labels: ['Amazon Alexa', 'Google Assistant', 'OpenAI ChatGPT', ],
      datasets: [{
        backgroundColor: [ChartHelper.colorAlexa(), ChartHelper.colorGoogle(), ChartHelper.colorOpenAI()],
        borderWidth: 0,
        data: [rawData.alexa.successPercentage, rawData.google.successPercentage, rawData.openai.successPercentage]
      }]
    }
    const options = ChartHelper.bar('Success By Platform', chartData)
    const context = document.getElementById('successByPlatformCanvas').getContext('2d')
    _.set(options, 'options.scales.y.ticks.max', 80)
    window.successByPlatformChart = new Chart(context, options)
  })
</script>

