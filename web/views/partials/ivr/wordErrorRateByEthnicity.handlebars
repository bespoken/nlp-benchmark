<canvas id="werByEthnicityCanvas" ></canvas>
<script>
  window.addEventListener('load', async () => {
    const canvas = document.getElementById('werByEthnicityCanvas').getContext('2d')
    const response = await axios.get('/ivr/werByEthnicity')
    const rawData = response.data
    let groups = ['White', 'Not White']
    
    const chartData = {
      labels: groups,
      datasets: [
        {
          backgroundColor: groups.map(t =>  window.datasets[0][2]),
          borderWidth: 0,
          data: filterByEthnicity(rawData,  window.datasets[0][0], groups),
          label:  window.datasets[0][1]
        },
        {
          backgroundColor: groups.map(t =>  window.datasets[1][2]),
          borderWidth: 0,
          data: filterByEthnicity(rawData,  window.datasets[1][0], groups),
          label:  window.datasets[1][1]
        },
        {
          backgroundColor: groups.map(t =>  window.datasets[2][2]),
          borderWidth: 0,
          data: filterByEthnicity(rawData, window.datasets[2][0], groups),
          label:  window.datasets[2][1]
        }
      ]
    }
    const chartConfiguration = ChartHelper.bar('Word Error Rate by Ethnicity', chartData, false, 2)
    _.set(chartConfiguration, 'options.plugins.datalabels.font.size', '10')
    _.set(chartConfiguration, 'options.scales.yAxes[0].ticks.max', 0.6)
    //_.set(chartConfiguration, 'options.legend.labels.padding', '30')
    window.werByDomainChart = new Chart(canvas, chartConfiguration)
  })

  function filterByEthnicity(resultsForPlatform, platform, groups) {
    return groups.map((group) => {
      return resultsForPlatform[platform].find(result => {
        return result.ethnicity_group === group
      }).WER
    })
  }
</script>
