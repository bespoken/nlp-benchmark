<canvas id="werByGenderCanvas" ></canvas>
<script>
  window.addEventListener('load', async () => {
    const canvas = document.getElementById('werByGenderCanvas').getContext('2d')
    const response = await axios.get('/ivr/werByGender')
    const rawData = response.data
    let groups = ['Female', 'Male']
    
    const chartData = {
      labels: groups,
      datasets: [
        {
          backgroundColor: groups.map(t => ChartHelper.colorAmazon()),
          borderWidth: 0,
          data: filterByGender(rawData, 'AMAZON', groups),
          label: 'Amazon Connect'
        },
        {
          backgroundColor: groups.map(t => ChartHelper.colorDialogflow()),
          borderWidth: 0,
          data: filterByGender(rawData, 'DIALOGFLOW', groups),
          label: 'Google Dialogflow'
        },
        {
          backgroundColor: groups.map(t => ChartHelper.colorTwilio()),
          borderWidth: 0,
          data: filterByGender(rawData, 'TWILIO', groups),
          label: 'Twilio Voice'
        }
      ]
    }
    const chartConfiguration = ChartHelper.bar('Word Error Rate by Gender', chartData, false, 2)
    _.set(chartConfiguration, 'options.plugins.datalabels.font.size', '10')
    _.set(chartConfiguration, 'options.scales.yAxes[0].ticks.max', 0.6)
    //_.set(chartConfiguration, 'options.legend.labels.padding', '30')
    window.werByGenderChart = new Chart(canvas, chartConfiguration)
  })

  function filterByGender(resultsForPlatform, platform, groups) {
    return groups.map((group) => {
      return resultsForPlatform[platform].find(result => {
        return result.gender === group
      }).WER
    })
  }
</script>
