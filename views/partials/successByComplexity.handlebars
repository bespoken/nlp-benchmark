<canvas id="canvas" height="{{height}}" width="{{width}}"></canvas>
<script>
  window.addEventListener('load', async () => {
    const canvas = document.getElementById('canvas').getContext('2d')
    const response = await axios.get('/successByComplexity')
    const chartData = response.data

    const chartDataset = {
      labels: ['Simple Questions', 'Complex Questions'],
      datasets: [
        {
          backgroundColor: [ChartHelper.colorAlexa(), ChartHelper.colorAlexa()],
          borderWidth: 0,
          data: [chartData.alexa0.successPercentage, chartData.alexa1.successPercentage],
          label: 'Amazon Alexa'
        },
        {
          backgroundColor: [ChartHelper.colorGoogle(), ChartHelper.colorGoogle()],
          borderWidth: 0,
          data: [chartData.google0.successPercentage, chartData.google1.successPercentage],
          label: 'Google Assistant'
        }
      ]
    }
    const options = ChartHelper.bar('Success By Question Complexity', chartDataset)
    window.successByComplexityChart = new Chart(canvas, options)
  })
</script>
