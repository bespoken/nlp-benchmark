<canvas id="successByPlatformCanvas" height="{{height}}" width="{{width}}"></canvas>
<script>
  window.addEventListener('load', async () => {
    const response = await axios.get('/successByPlatform')
    const chartData = response.data

    const datasets = {
      labels: ['Amazon Alexa', 'Google Assistant'],
      datasets: [{
        backgroundColor: [
          ChartHelper.colorAlexa(),
          ChartHelper.colorGoogle()
        ],
        borderWidth: 0,
        data: [chartData.alexa.successPercentage, chartData.google.successPercentage]
      }]
    }
    const options = ChartHelper.bar('Success By Platform', datasets)
    const context = document.getElementById('successByPlatformCanvas').getContext('2d')
    window.successByPlatformChart = new Chart(context, options)
  })
</script>

